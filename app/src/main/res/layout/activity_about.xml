<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About_activity_activity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/white"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/black"

            app:title="ABOUT US"
            app:navigationIcon="@drawable/ic_baseline_chevron_left_24"
            app:titleTextAppearance="@style/toolbart"
            app:popupTheme="@style/Theme.Karwaan.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/content_main">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher_round"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="KARWAAN"
                android:fontFamily="@font/sans"
                android:textSize="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/mons"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Karwaan is a cultural fest, organised by college students in order to promote art and
culture in the college. This includes events and competitions comprising, Singing, Dancing,
Poetry, Nukkad Natak, Drama, Debate, etc. Since the global pandemic is boring us down to
our homes, Karwaan will be organised online to smash our roofs and let the rain in. This
will be a platform for every artist, to showcase their talent and win exciting prizes. No
matter if we are at our homes, we can still feel the mizzle about to come.
Every artist or art lover can be a part of this wonderful mizzle organised by students of UIT,
RGPV, Bhopal, irrespective of their age and gender."/>


        </LinearLayout>

    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>